<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.ghost005.serviceclient.fragments.work_order.WorkOrderInfoFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/table_layout_padding"
			android:shrinkColumns="1">

			<TableRow
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_id"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:id="@+id/table_row_order_scheduled_start"
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_scheduled_start_long"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_scheduled_start"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:id="@+id/table_row_order_scheduled_end"
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_scheduled_end_long"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_scheduled_end"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_name"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:id="@+id/table_row_order_description"
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_description"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_description"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_type"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/order_status"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />


				<TextView
					android:id="@+id/text_view_order_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

			<TableRow
				android:id="@+id/table_row_order_town"
				android:padding="@dimen/table_layout_row_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/town"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold" />

				<TextView
					android:id="@+id/text_view_order_town"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
					android:paddingStart="@dimen/table_layout_item_padding_horizontal"
					android:text="@string/empty_string"
					android:textAppearance="?android:attr/textAppearanceLarge" />
			</TableRow>

		</TableLayout>

		<ImageView
			android:id="@+id/image_view_maps"
			android:layout_width="@dimen/min_touch_view_size"
			android:layout_height="@dimen/min_touch_view_size"
			android:layout_marginEnd="@dimen/table_layout_item_padding_horizontal"
			android:layout_marginStart="@dimen/table_layout_item_padding_horizontal"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:scaleType="fitCenter"
			android:src="@drawable/ic_google_maps" />

	</LinearLayout>

</ScrollView>

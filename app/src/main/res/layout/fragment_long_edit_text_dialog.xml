<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.example.ghost005.serviceclient.dialogs.LongEditTextDialogFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/edit_pattern_margin">

		<TextView
			android:id="@+id/text_view_dialog_sub_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/edit_pattern_margin"
			android:textAppearance="@style/TextStyle.Medium"
			android:textStyle="bold"
			tools:text="@string/not_available" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/edit_pattern_margin">

			<EditText
				android:id="@+id/edit_text_dialog"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spinner_margin_start"
				android:text="Text-Eingabe"
				android:paddingEnd="40dp"
				android:textAppearance="@style/TextStyle.Large" />

			<ImageButton
				android:id="@+id/image_button_dialog_text_clear"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|center_vertical"
				android:layout_marginEnd="@dimen/image_button_clear_margin_end"
				android:background="@null"
				android:src="@drawable/ic_clear_black_24dp" />

		</FrameLayout>

		<Button
			android:id="@+id/button_dialog_scan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="@dimen/button_scan_margin"
			android:background="@drawable/selector_scan_button"
			android:drawablePadding="10dp"
			android:drawableStart="@drawable/ic_qrcode_white_24dp"
			android:padding="10dp"
			android:text="@string/dialog_scan"
			android:textAppearance="@style/TextStyle.ColorButton" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button_dialog_cancel"
			style="@android:style/Widget.DeviceDefault.Light.ActionButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.5"
			android:text="@string/dialog_cancel"
			android:textAppearance="?android:attr/textAppearanceLarge" />

		<Button
			android:id="@+id/button_dialog_ok"
			style="@android:style/Widget.DeviceDefault.Light.ActionButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_weight="0.5"
			android:text="@string/dialog_ok"
			android:textAppearance="@style/TextStyle.Large" />

	</LinearLayout>

</LinearLayout>
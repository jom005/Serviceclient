<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardUseCompatPadding="true">

	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/card_view_padding">

		<TextView
			android:id="@+id/tvCommentName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_toStartOf="@+id/tvCommentDate"
			android:text="@string/empty_string"
			android:textAppearance="@style/TextStyle.Comment" />

		<TextView
			android:id="@+id/tvCommentDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:text="@string/empty_string"
			android:textAppearance="@style/TextStyle.Comment" />

		<TextView
			android:id="@+id/tvComment"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/tvCommentName"
			android:layout_marginTop="@dimen/card_view_vertical_margin_comment"
			android:text="@string/empty_string"
			android:textAppearance="@style/TextStyle.Comment" />
	</RelativeLayout>

</android.support.v7.widget.CardView>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.ghost005.serviceclient.fragments.work_order_item.WorkOrderItemInfoFragment">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/table_layout_padding"
		android:shrinkColumns="1">

		<TableRow
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_item"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_name"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:id="@+id/table_row_order_item_long_description"
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_long_description"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_long_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:id="@+id/table_row_order_item_maintenance_level"
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_maintenance_level"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_maintenance_level"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:id="@+id/table_row_order_item_system"
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_system"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_system"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_element_name"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_element"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

		<TableRow
			android:padding="@dimen/table_layout_row_padding">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/order_item_status"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/text_view_order_item_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingEnd="@dimen/table_layout_item_padding_horizontal"
				android:paddingStart="@dimen/table_layout_item_padding_horizontal"
				android:textAppearance="?android:attr/textAppearanceLarge"
				tools:text="@string/empty_string" />

		</TableRow>

	</TableLayout>

</ScrollView>
